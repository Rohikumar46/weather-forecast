    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Weather Forecast!
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="icon", type="image/png", href='/images/android-chrome-192x192.png')
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/simplebar@5.3.0/dist/simplebar.min.css", rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/simplebar@5.3.0/dist/simplebar.min.js")
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
    script.
      const navLinks = document.querySelectorAll(".navbar-nav a.nav-link");
      navLinks.forEach(link => {
        link.addEventListener("click", event => {
          event.preventDefault();
          const target = document.querySelector(link.getAttribute("href"));
          if (target) {
            window.scrollTo({
              top: target.offsetTop,
              behavior: "smooth"
            });
          }
        });
      })

    style.
      /* Custom styles */
      body {
        background-image: url('/images/mor.webp');
        background-size: cover;
        height: 50vh;
        background-color: #333;
      }
      .simplebar-scrollbar::before {
        background-color: #f06292;
      }
      .simplebar-track.simplebar-horizontal {
        background-color: #f06292;
      }
      .simplebar-track.simplebar-vertical {
        background-color: white;
      }
      .navbar-custom {
        background-color: #333;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 0.5rem 1rem;
        flex-wrap: nowrap;
        flex-direction: row-reverse;
        justify-content: center;
      }
      .navbar-custom .navbar-brand {
        color: rgb(52, 175, 192);
        font-size: 24px;
        font-family: 'Pacifico', cursive;
      }
      .navbar-custom .nav-link {
        color: #ffffff;
        font-size: 16px;
        transition: color 0.3s;
      }
      .navbar-custom .nav-link:hover {
        color: #f06292;
      }
      .card {
        background-color: #333;
        border: none;
      }
      .card-title {
        color: #f06292;
        font-size: 20px;
        margin-bottom: 10px;
      }
      .card-text {
        color: #ffffff;
        font-size: 16px;
        margin-bottom: 5px;
      }
      .row.mt-4 {
        margin-top: 4rem;
      }
      .article-container {
        background-color: #333;
        border: none;
      }
      .article-title {
        color: #f06292;
        font-size: 24px;
        margin-top: 20px;
      }
      .article-text {
        color: #ffffff;
        font-size: 16px;
        margin-bottom: 20px;
      }

